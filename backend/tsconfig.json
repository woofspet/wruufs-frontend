{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // ðŸ‘ˆ use CommonJS
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"]
    },
    "outDir": "dist"
  },
  "include": ["src", "server.ts"],
  "exclude": ["node_modules"]
}
